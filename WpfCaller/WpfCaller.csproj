		<RuntimeIdentifiers>win-x86;win-x64</RuntimeIdentifiers>
		<UseWPF>true</UseWPF>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<Authors>Muhammad Azeez and Gerardo Lijs</Authors>
		<Company>LijsDev</Company>
		<Copyright>Copyright Â© LijsDev 2022-2025</Copyright>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="LijsDev.CrystalReportsRunner.13.0.34.x64" Version="1.4.9" />
		<PackageReference Include="System.Data.SqlClient" Version="4.9.0" />
	</ItemGroup>

	<ItemGroup>
		<None Update="SampleIcon.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="sampleImage1.jpg">
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="sampleImage2.jpg">
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="SampleReport.rpt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="SampleReportDataset.rpt">
